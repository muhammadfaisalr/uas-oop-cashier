<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXProgressBar?>
<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.StackPane?>
<AnchorPane fx:id="anchorRoot" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0"
            prefWidth="800.0" style="-fx-min-width: 100%;" stylesheets="@../style/styles.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="id.muhammadfaisal.parkeecashier.pages.CreateTransactionPageController">
    <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label styleClass="label-header">Create Transaction</Label>
        <GridPane vgap="16.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <VBox.margin>
                <Insets top="16.0"/>
            </VBox.margin>
            <TextField GridPane.columnIndex="1" fx:id="inputLicense"/>
            <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="comboBox"/>
            <Label styleClass="label-for " text="Vehicle Plate Number"/>
            <Label styleClass="label-for" text="Vehicle Type" GridPane.rowIndex="1"/>
        </GridPane>
        <MFXButton maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Process" VBox.vgrow="ALWAYS"
                   styleClass="btn-primary" fx:id="btnSubmit">
            <VBox.margin>
                <Insets top="16.0"/>
            </VBox.margin>
        </MFXButton>
        <MFXProgressBar fx:id="mfxProgressBar" progress="-Infinity" visible="false"/>
        <StackPane
                prefWidth="300" prefHeight="150"
                styleClass="card">
            <Label styleClass="card-text" fx:id="labelInfo"/>
        </StackPane>
    </VBox>
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
    </padding>
</AnchorPane>
