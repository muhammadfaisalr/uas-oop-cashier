<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml" fx:id="sideNavigationBar" prefWidth="200" style="-fx-background-color: #333;"
        fx:controller="id.muhammadfaisal.parkeecashier.component.SideNavigationBarController" stylesheets="@../style/styles.css" styleClass="sidenav">

    <Label text="Navigation" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #fff;"/>
    <Separator/>
    <Button fx:id="homeButton" text="Home" onAction="#handleHomeButtonAction"/>
    <Button fx:id="aboutButton" text="About" onAction="#handleAboutButtonAction"/>
    <Button fx:id="contactButton" text="Contact" onAction="#handleContactButtonAction"/>
</VBox>
